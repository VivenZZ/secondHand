.pickerList {
  margin-left: 40rpx;
  padding-right: 20rpx;
  line-height: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #F2F2F2;
}
.pickerList .image {
  margin-right: 20rpx;
}
.pickerList .picker {
  flex: 1;
  font-size: 15px;
  font-weight: bold;
  color: #545454;
}
.pickerList .picker text {
  margin-left: 20rpx;
  font-weight: 400;
}
.pickerList .inputbox {
  display: flex;
  font-size: 15px;
  color: #545454;
}
.pickerList .inputbox-text {
  margin-right: 20rpx;
  font-weight: bold;
}
.pickerList .inputbox-input {
  max-width: 500rpx;
  height: 100rpx;
}
