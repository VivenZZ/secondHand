/* components/searchInput/searchInput.wxss */
.searchInput-form {
  display: block;
  width: 100vw;
  padding: 20rpx;
  background: #d4237a;
  display: flex;
  align-items: center;
}
.searchInput-form .searchInput-button {
  width: 100rpx;
  overflow: hidden;
}
.searchInput-form .searchInput-section {
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  background-color: white;
  border-radius: 10rpx;
}
.searchInput-form .searchInput-section .searchInput-searchImage {
  width: 50rpx;
  height: 50rpx;
}
.searchInput-form .searchInput-section .section-input {
  flex: 1;
  height: 80rpx;
}
