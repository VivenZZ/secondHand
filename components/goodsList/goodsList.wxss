/* components/goodsList/goodsList.wxss */
.goodsList-item {
  border: 1px solid yellow;
  display: flex;
}
.goodsList-item .goodsList-item-imageBox {
  display: block;
  flex-shrink: 0;
  width: 100px;
  height: 100px;
}
.goodsList-item .goodsList-item-imageBox .goodsList-item-image {
  width: 100%;
  height: 100%;
}
.goodsList-item .goodsList-item-imageBox .goodsList-item-info {
  width: 30%;
}
.goodsList-item .goodsList-item-info-titleBox {
  display: flex;
}
.goodsList-item .goodsList-item-info-titleBox .goodsList-item-info-title {
  flex: 1;
}
.goodsList-item .goodsList-item-info-person .goodsList-item-info-picBox {
  display: block;
  flex-shrink: 0;
  width: 50px;
  height: 50px;
}
.goodsList-item .goodsList-item-info-person .goodsList-item-info-pic {
  width: 100%;
  height: 100%;
}
